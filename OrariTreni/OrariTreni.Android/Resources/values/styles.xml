<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item> <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowActionBar">false</item> <!--We will be using the toolbar so no need to show ActionBar-->
    
    <item name="colorPrimary">@color/DarkCyan</item> <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimaryDark">@color/DarkerDarkCyan</item> <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorAccent">@color/Cyan</item> <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <!-- You can also set colorControlNormal, colorControlActivated colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/Cyan</item> <!--#FF4081-->
  </style>
</resources>